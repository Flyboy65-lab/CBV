<script>
  // --- Flipper Zero Comic App Logic ---

  // 1. Define the "Comic Pages" (pre-processed 128x64 content)
  const comicPages = [
    {
      title: "Page 1: The Signal",
      content: 
`
> CHAPTER 1
> THE SILENT SIGNAL

    FLIPPER:
    (Thinking)
    The sub-GHz
    spectrum is
    quiet tonight.
    Too quiet.

    Then, a flicker.
    A rogue 433 MHz 
    packet. Encrypted.
    A warning?

  (Tap right to continue)
`
    },
    {
      title: "Page 2: The Decrypt",
      content: 
`
    FLIPPER:
    (Muttering)
    "XOR key 0xF7"

    The buffer clears.
    The message reads:
    "THE DOLPHIN 
    HAS BEEN 
    COMPROMISED.
    SEEK THE QWERTY."

    Where is QWERTY?
    I need an SD map.
`
    },
    {
      title: "Page 3: End of Chapter",
      content: 
`
    TO BE CONTINUED
    IN CHAPTER 2:
    THE SD CARD HUNT

    THANKS FOR READING!
    -- END --
    
  (Tap left to restart)
`
    }
  ];

  let currentPageIndex = 0;
  const contentElement = document.getElementById('comic-content');
  const indicatorElement = document.getElementById('page-indicator');

  /**
   * Renders the current comic page to the screen.
   */
  function renderPage() {
    const page = comicPages[currentPageIndex];
    contentElement.textContent = page.content.trim();
    indicatorElement.textContent = `${currentPageIndex + 1}/${comicPages.length}`;
  }

  /**
   * Advances to the next page.
   */
  function nextPage() {
    if (currentPageIndex < comicPages.length - 1) {
      currentPageIndex++;
      renderPage();
    } else {
      // Loop or display an end message
      // In this case, we just stay on the last page.
    }
  }

  /**
   * Goes back to the previous page.
   */
  function prevPage() {
    if (currentPageIndex > 0) {
      currentPageIndex--;
      renderPage();
    } else {
      // Optional: wrap around to the last page
      // currentPageIndex = comicPages.length - 1;
      // renderPage();
    }
  }

  // --- Input Handling (Flipper Buttons and Keyboard) ---

  function setupInputHandlers() {
    // 1. Keyboard Arrow Keys
    document.addEventListener('keydown', (event) => {
      switch (event.key) {
        case 'ArrowRight':
          nextPage();
          break;
        case 'ArrowLeft':
          prevPage();
          break;
        case 'ArrowUp': // Up/Down/OK/Back do nothing in this simplified app
        case 'ArrowDown':
        case 'Enter':
        case 'Escape': 
          break;
      }
    });

    // 2. Button Mocks (for touch/click interaction)
    document.getElementById('right-btn').addEventListener('click', nextPage);
    document.getElementById('left-btn').addEventListener('click', prevPage);
  }

  // --- Initialization ---

  window.onload = function() {
    renderPage();
    setupInputHandlers();
    // Optional: Log message for developers
    // console.log("Comic Reader Simulation loaded. Flipper Zero resolution: 128x64px.");
  };
</script>

